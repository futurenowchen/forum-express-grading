<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row">
      <div class="col-md-4">
        <img src="{{this.image}}" class="img-fluid rounded-start" alt="...">
      </div>

      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary">收藏數：{{this.favoritedCount}}</span>
          <p class="card-text">{{this.description}}</p>

          <div class="row">
            <a href="/restaurants/{{this.id}}">
              <button type="submit" class="btn btn-primary mx-1">Show</button>
            </a>
            {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger mx-1">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button type="submit" class="btn btn-primary mx-1">加到最愛</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>